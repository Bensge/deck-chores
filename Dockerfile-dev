FROM python:alpine

ENTRYPOINT ["/sbin/tini", "--"]
CMD ["deck-chores"]
LABEL org.label-schema.name="deck-chores"
ENV DEBUG=true

RUN apk add --no-cache build-base libffi-dev openssl-dev tini tzdata \
 && pip install cerberus~=1.2 docker[ssh,tls]~=4.0 fasteners~=0.14 APScheduler~=3.6

COPY . /src

RUN python /src/setup.py install
